{
  "name": "@focus-reader/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./migration-sql": {
      "import": "./dist/migration-sql.js",
      "types": "./dist/migration-sql.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "migrate": "wrangler d1 migrations apply FOCUS_DB --local --persist-to ../../.wrangler/state",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@focus-reader/shared": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12",
    "@cloudflare/workers-types": "^4",
    "tsup": "^8",
    "typescript": "^5",
    "vitest": "~3.2.0",
    "wrangler": "^4"
  }
}
