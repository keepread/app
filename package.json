{
  "name": "focus-reader",
  "private": true,
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=!focus-reader-extension",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:migrate": "pnpm --filter @focus-reader/db run migrate",
    "deploy": "./scripts/deploy.sh",
    "deploy:web": "./scripts/deploy.sh web",
    "deploy:email": "./scripts/deploy.sh email",
    "deploy:rss": "./scripts/deploy.sh rss",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "turbo": "^2",
    "typescript": "^5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "spawn-sync",
      "workerd"
    ]
  }
}
